    <script>
        function CanSubmit(){
            //alert('ok');
            var pwd=document.forms[0].txtpassword.value;
            var cpwd=document.forms[0].txtcpassword.value;
            if(pwd==cpwd)
            return true;

            else {
                alert("please make sure that password are same");
                return false;
            }
        }

    </script>
